{
  "name": "luminote",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered Christmas light sequence generator",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "deploy": "npm run pages:build && wrangler pages deploy .vercel/output/static --project-name=luminote",
    "test:prompt": "node -r dotenv/config node_modules/.bin/tsx scripts/test-prompt-parser.ts dotenv_config_path=.env.local",
    "test:effects": "npx tsx scripts/test-effect-renderer.ts",
    "test:fseq": "npx tsx scripts/test-fseq-writer.ts",
    "test:pipeline": "npx tsx scripts/test-full-pipeline.ts",
    "parse-layout": "npx tsx scripts/parse-layout.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "fast-xml-parser": "^4.5.0",
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "wrangler": "^3.100.0"
  }
}
